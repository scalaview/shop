<style type="text/css">
</style>
<div id="page-label-input" class="page page-current">
  <div class="content native-scroll">
    <div class="list-block">
      <ul>
        <!-- Text inputs -->
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-title label">收货人姓名</div>
              <div class="item-input">
                <input type="text" placeholder="请输入收货人姓名">
              </div>
            </div>
          </div>
        </li>
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-title label">手机号码</div>
              <div class="item-input">
                <input type="text" placeholder="请输入手机号码">
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <div class="content-block-title">所在区域</div>
    <div class="list-block">
      <ul>
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-input">
                <select class="weui_select" name="select1" ng-change="provinceChange(current_province)" ng-model="current_province">
                  <option disabled value=""> -- 请选择 -- </option>
                  <%= options_for_select(Shoppe::Region.getProvice.map{|re| [re.name, re.code] }) %>
                </select>
              </div>
              <div class="item-input">
                <select class="weui_select" name="select2" ng-change="cityChange(current_city)" ng-model="current_city" ng-options="select_city.name for select_city in getCity">
                  <option disabled value="">-- 请选择 --</option>
                </select>
              </div>
              <div class="item-input">
                <select class="weui_select" name="select3" ng-model="current_district" ng-options="select_district.name for select_district in getDistrict">
                  <option disabled value="">-- 请选择 --</option>
                </select>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <div class="list-block">
      <ul>
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-title label">详细地址</div>
              <div class="item-input">
                <input type="text" placeholder="请输入详细地址">
              </div>
            </div>
          </div>
        </li>
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-title label">邮政编码</div>
              <div class="item-input">
                <input type="text" placeholder="请输入邮政编码">
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <div class="content-block">
      <div class="row">
        <div class="col-100"><a href="#" class="button button-big button-fill button-success">保存地址</a></div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
angular.module('index', []).controller('addresses', function($scope,$http) {
  $scope.provinceChange = function(current_province){
    $scope.getCity = [];
    $scope.getDistrict = [];
    $http({
        method: 'POST',
        url: '/region_city',
        headers: {
         'Accept': "application/json"
        },
        data: {
          provice: current_province
        }
      }).then(function(res){
        $scope.getCity = res.data
      })
  };
  $scope.cityChange = function(current_city){
    $scope.getDistrict = [];
    if(current_city){
      $http({
        method: 'POST',
        url: '/region_district',
        headers: {
         'Accept': "application/json"
        },
        data: {
          city: current_city.code
        }
      }).then(function(res){
        $scope.getDistrict = res.data
      })
    }
  };
}).config(function ($httpProvider) {
  if(document.getElementsByName('csrf-token')[0] && document.getElementsByName('csrf-token')[0].getAttribute('content')){
    $httpProvider.defaults.headers.common['X-CSRF-Token'] = document.getElementsByName('csrf-token')[0].getAttribute('content')
  }
});

</script>