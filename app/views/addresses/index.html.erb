  float:left;
  padding-top:7px;
  padding-bottom: 7px;
  margin: 0;
}
.address_group_margin_top{
  margin-top: 15px;
}
.address_div_bottom{
  margin-top: 20px;
  margin-left: 0;
  position:fixed;
  bottom:0;
  width: 100%;

