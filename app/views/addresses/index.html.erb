{
    text-decoration: none;
}
</style>
<div class="container js_container">
<!--
收货人姓名
手机号码
所在区域
街道
详细地址
邮政编码
 -->
  <div class="page cell">
    <div class="bd">
      <div class="weui_cells weui_cells_form">
        <div class="weui_cell">
          <div class="weui_cell_hd">
            <label class="weui_label address_weui_label">收货人姓名</label>
          </div>
          <div class="weui_cell_bd weui_cell_primary">
            <input class="weui_input" type="tel" placeholder="请输入收货人姓名">
          </div>
        </div>
        <div class="weui_cell">
          <div class="weui_cell_hd">
            <label class="weui_label">手机号码</label>
          </div>
          <div class="weui_cell_bd weui_cell_primary">
            <input class="weui_input" type="tel" placeholder="请输入手机号码">
          </div>
        </div>
      </div>
      <div class="weui_cells_title">所在区域</div>
      <div class="weui_cells weui_cells_split">
        <div class="weui_cell weui_cell_select">
          <div class="weui_cell_bd weui_cell_primary">
            <select class="weui_select" name="select1" ng-change="provinceChange(current_province)" ng-model="current_province">
              <option disabled value=""> -- 请选择省份 -- </option>
              <%= options_for_select(Shoppe::Region.getProvice.map{|re| [re.name, re.code] }) %>
            </select>
          </div>
        </div>
        <div class="weui_cell weui_cell_select">
          <div class="weui_cell_bd weui_cell_primary">
            <select class="weui_select" name="select2" ng-change="cityChange(current_city)" ng-model="current_city" ng-options="select_city.name for select_city in getCity">
              <option disabled value="">-- 请选择地市 --</option>
            </select>
          </div>
        </div>
        <div class="weui_cell weui_cell_select">
          <div class="weui_cell_bd weui_cell_primary">
            <select class="weui_select" name="select3" ng-model="current_district" ng-options="select_district.name for select_district in getDistrict">
              <option disabled value="">-- 请选择区县 --</option>
            </select>
          </div>
        </div>
      </div>
      <div class="weui_cells weui_cells_form">
        <div class="weui_cell">
          <div class="weui_cell_hd">
            <label class="weui_label">详细地址</label>
          </div>
          <div class="weui_cell_bd weui_cell_primary">
            <input class="weui_input" type="tel" placeholder="请输入详细地址">
          </div>
        </div>
        <div class="weui_cell">
          <div class="weui_cell_hd">
            <label class="weui_label">邮政编码</label>
          </div>
          <div class="weui_cell_bd weui_cell_primary">
            <input class="weui_input" type="tel" placeholder="请输入邮政编码">
          </div>
        </div>
      </div>
      <div class="weui_btn_area">
          <a class="weui_btn weui_btn_primary" href="javascript:">保存地址</a>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
angular.module('index', []).controller('addresses', function($scope,$http) {
  $scope.provinceChange = function(current_province){
    $scope.getCity = [];
    $scope.getDistrict = [];
    $http({
        method: 'POST',
        url: '/region_city',
        headers: {
         'Accept': "application/json"
        },
        data: {
          provice: current_province
        }
      }).then(function(res){
        $scope.getCity = res.data
      })
  };
  $scope.cityChange = function(current_city){
    $scope.getDistrict = [];
    if(current_city){
      $http({
        method: 'POST',
        url: '/region_district',
        headers: {
         'Accept': "application/json"
        },
        data: {
          city: current_city.code
        }
      }).then(function(res){
        $scope.getDistrict = res.data
      })
    }
  };
}).config(function ($httpProvider) {
  if(document.getElementsByName('csrf-token')[0] && document.getElementsByName('csrf-token')[0].getAttribute('content')){
    $httpProvider.defaults.headers.common['X-CSRF-Token'] = document.getElementsByName('csrf-token')[0].getAttribute('content')
  }
});

</script>