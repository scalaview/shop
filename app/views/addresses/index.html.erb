<style type="text/css">
.address_div_float{
  float:left;
  padding: 0;
  position: absolute;
  width: 75%;
  margin-left: 90px;
}
.address_div_float_area{
  float:left;
  padding: 0;
  width: 25%;
  margin-left: 5px;
}
.address_div_float_area_first{
  float:left;
  padding: 0;
  width: 25%;
  position: absolute;
  margin-left: 90px;
}
.address_label_float{
  float:left;
  padding-top:7px;
  padding-bottom: 7px;
  margin: 0;
}
.address_group_margin_top{
  margin-top: 15px;
}
.address_div_bottom{
  margin-top: 20px;
  margin-left: 0;
  position:fixed;
  bottom:0;
  width: 100%;

}
.address_button_bottom{
  border-radius: 0;
}
a:hover
{
    text-decoration: none;
}
</style>
<div class="container">
<!--
收货人姓名
手机号码
所在区域
街道
详细地址
邮政编码
 -->
  <form class="form-horizontal">
    <div class="form-group address_group_margin_top">
      <label for="inputPassword" class="col-sm-2 control-label address_label_float">收货人姓名</label>
      <div class="col-sm-10 address_div_float">
        <input type="text" class="form-control" id="inputPassword" placeholder="收货人姓名">
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-sm-2 control-label address_label_float">手机号码</label>
      <div class="col-sm-10 address_div_float">
        <input type="text" class="form-control" id="inputPassword" placeholder="手机号码">
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-sm-2 control-label address_label_float">所在地区</label>
      <div class="col-sm-10 address_div_float_area" ng-controller="addresses">
        <select class="form-control" ng-change="provinceChange(current_province)" ng-model="current_province">
          <%= options_for_select(Shoppe::Region.getProvice.map{|re| [re.name, re.code] }) %>
        </select>
        <select class="form-control" ng-change="cityChange(current_city)" ng-model="current_city" ng-options="city.name for city in getCity">
        </select>
        <select class="form-control" ng-model="current_district" ng-options="district.name for district in getDistrict">
        </select>
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-sm-2 control-label address_label_float">详细地址</label>
      <div class="col-sm-10 address_div_float">
        <input type="text" class="form-control" id="inputPassword" placeholder="详细地址">
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-sm-2 control-label address_label_float">邮政编码</label>
      <div class="col-sm-10 address_div_float">
        <input type="text" class="form-control" id="inputPassword" placeholder="邮政编码">
      </div>
    </div>
</form>
</div>
<div class="navbar-fixed-bottom">
    <a class="weui_btn weui_btn_warn weui_btn_primary address_button_bottom" href="javascript:">保存地址</a>
</div>


<script type="text/javascript">
angular.module('index', []).controller('addresses', function($scope,$http) {
  $scope.provinceChange = function(current_province){
    $http({
        method: 'POST',
        url: '/region_city',
        headers: {
         'Accept': "application/json"
        },
        data: {
          provice: current_province
        }
      }).then(function(res){
        $scope.getCity = res.data
      })
  };
  $scope.cityChange = function(current_city){
    $http({
        method: 'POST',
        url: '/region_district',
        headers: {
         'Accept': "application/json"
        },
        data: {
          city: current_city.code
        }
      }).then(function(res){
        $scope.getDistrict = res.data
      })
  };
}).config(function ($httpProvider) {
  if(document.getElementsByName('csrf-token')[0] && document.getElementsByName('csrf-token')[0].getAttribute('content')){
    $httpProvider.defaults.headers.common['X-CSRF-Token'] = document.getElementsByName('csrf-token')[0].getAttribute('content')
  }
});

</script>