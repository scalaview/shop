<div class="container">
<!--
收货人姓名
手机号码
所在区域
街道
详细地址
邮政编码
 -->
  <form class="form-horizontal">
    <div class="form-group address_group_margin_top">
      <label for="inputPassword" class="col-sm-2 control-label address_label_float">收货人姓名</label>
      <div class="col-sm-10 address_div_float">
        <input type="text" class="form-control" id="inputPassword" placeholder="收货人姓名">
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-sm-2 control-label address_label_float">手机号码</label>
      <div class="col-sm-10 address_div_float">
        <input type="text" class="form-control" id="inputPassword" placeholder="手机号码">
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-sm-2 control-label address_label_float">所在地区</label>
      <div class="col-sm-10 address_div_float_area" ng-controller="areaSelect">
        <select class="form-control" ng-model="province" ng-options="m.name for m in area" placeholder="--省份--"></select>
        <select class="form-control" ng-model="city" ng-options="m.name for m in province.city" placeholder="--地市--"></select>
        <select class="form-control" ng-model="district" ng-options="m.name for m in city.district" placeholder="--区县--"></select>
      </div>
    </div>
    <div class='html-tag city-group'>
      <select class='city-select city-province'>
        <option>--省份--</option>
        <%= options_for_select(Areas.list, province) %>
      </select>
      <select class='city-select city-city'>
        <option>--城市--</option>
        <%= options_for_select(cities, city) %>
      </select>
      <select class='city-select city-district'>
        <option>--地区--</option>
        <%= options_for_select(districtes, district) %>
      </select>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-sm-2 control-label address_label_float">详细地址</label>
      <div class="col-sm-10 address_div_float">
        <input type="text" class="form-control" id="inputPassword" placeholder="详细地址">
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-sm-2 control-label address_label_float">邮政编码</label>
      <div class="col-sm-10 address_div_float">
        <input type="text" class="form-control" id="inputPassword" placeholder="邮政编码">
      </div>
    </div>
</form>
</div>
<div class="navbar-fixed-bottom">
    <a class="weui_btn weui_btn_warn weui_btn_primary address_button_bottom" href="javascript:">保存地址</a>
</div>


