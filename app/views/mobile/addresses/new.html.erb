<div id="page-address-new" class="page page-current">
  <header class="bar bar-nav">
    <%= link_to mobile_manage_addresses_path, :class => "button button-link button-nav pull-left back" do %>
      <span class="icon icon-left"></span>返回
    <% end %>
    <h1 class="title">新增地址</h1>
  </header>
  <div class="content native-scroll">
    <div class="list-block">
      <ul>
        <!-- Text inputs -->
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-title label">收货人姓名</div>
              <div class="item-input">
                <input type="text" placeholder="请输入收货人姓名">
              </div>
            </div>
          </div>
        </li>
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-title label">手机号码</div>
              <div class="item-input">
                <input type="text" placeholder="请输入手机号码">
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <div class="content-block-title">所在区域</div>
    <div class="list-block">
      <ul>
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-input">
                <select id="select_province" name="select_province">
                  <option value=""> -- 请选择 -- </option>
                  <%= options_for_select(Shoppe::Region.getProvince.map{|re| [re.name, re.code] }) %>
                </select>
              </div>
              <div class="item-input">
                <select id="select_city" name="select_city">
                </select>
              </div>
              <div class="item-input">
                <select id="select_district" name="select_district">
                </select>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <div class="list-block">
      <ul>
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-title label">详细地址</div>
              <div class="item-input">
                <input type="text" placeholder="请输入详细地址">
              </div>
            </div>
          </div>
        </li>
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-title label">邮政编码</div>
              <div class="item-input">
                <input type="text" placeholder="请输入邮政编码">
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <div class="content-block">
      <div class="row">
        <div class="col-100"><a href="#" class="button button-big button-fill button-success">保存地址</a></div>
      </div>
    </div>
  </div>
</div>
