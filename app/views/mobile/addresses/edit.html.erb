<div id="page-address-edit" class="page page-address-edit page-current page-modal">
  <header class="bar bar-nav">
    <%= link_to mobile_manage_addresses_path, :class => "button button-link button-nav pull-left back" do %>
      <span class="icon icon-left"></span>返回
    <% end %>
    <%= link_to mobile_address_path(@address.id), :method => :delete, :class => "button button-link button-nav pull-right confirm-ok" do %>
      删除
    <% end %>
    <h1 class="title">修改地址</h1>
  </header>
  <div class="content native-scroll">
    <%= form_for @address, :url => mobile_address_path(@address.id), :method => :PATCH do |f| %>
    <div class="list-block">
      <ul>
        <!-- Text inputs -->
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-title label">收货人姓名</div>
              <div class="item-input">
                <%= f.text_field :receiver_name, :tabindex => "1", :placeholder => '请输入收货人姓名' %>
              </div>
            </div>
          </div>
        </li>
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-title label">手机号码</div>
              <div class="item-input">
                <%= f.text_field :phone, :tabindex => "2", :placeholder => '请输入手机号码' %>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <div class="content-block-title">所在区域</div>
    <div class="list-block">
      <ul>
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-input">
                <%= f.select :province, :tabindex => "3" do %>
                  <option value=""> -- 请选择 -- </option>
                  <%= options_for_select(Shoppe::Region.getProvince.map{|re| [re.name, re.code] }) %>
                <% end %>
              </div>
              <div class="item-input">
                <%= f.select :city, :tabindex => "4" %>
              </div>
              <div class="item-input">
                <%= f.select :area, :tabindex => "5" %>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <div class="list-block">
      <ul>
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-title label">详细地址</div>
              <div class="item-input">
                <%= f.text_field :location, :tabindex => "6", :placeholder => '请输入详细地址' %>
              </div>
            </div>
          </div>
        </li>
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-title label">邮政编码</div>
              <div class="item-input">
                <%= f.text_field :postcode, :tabindex => "7", :placeholder => '请输入邮政编码' %>
              </div>
            </div>
          </div>
        </li>
        <li>
          <div class="item-content">
            <div class="item-inner">
              <div class="item-title label">默认地址</div>
              <div class="item-input">
                <label class="label-switch">
                  <%= f.check_box :default, :tabindex => "8" %>
                  <div class="checkbox"></div>
                </label>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <div class="content-block">
      <div class="row">
        <div class="col-100"><%= f.submit '保存地址', :tabindex => "9", :class => 'button button-big button-fill button-success' %></div>
      </div>
    </div>
    <% end %>
  </div>
</div>
