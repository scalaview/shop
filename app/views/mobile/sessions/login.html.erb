<%= show_flash %>

<div class="login_sec">
   <div class="container">
     <h2>Login</h2>
     <div class="col-md-6 log">
         <p>Welcome, please enter the folling to continue.</p>
         <p>If you have previously Login with us, <span>click here</span></p>
         <%= form_for @customer, :url => mobile_sign_in_path, validate: true do |f| %>
            <h5>Username:</h5>
            <%= f.text_field :email, validate: true %>
            <h5>Password:</h5>
            <%= f.password_field :password %>
            <%= f.submit :Login %>
            <%= link_to 'Create an Account', mobile_register_path, :class => "acount-btn" %>
         <% end %>
         <a href="#">Forgot Password ?</a>

     </div>

     <div class="clearfix"></div>
   </div>
</div>