<div class="container">
  <div class="col-md-12 det">
     <div class="single_left">
        <div class="flexslider">
           <ul class="slides">
              <li data-thumb="/images/s11.jpeg">
                 <img src="/images/s11.jpeg" />
              </li>
              <li data-thumb="/images/s22.jpeg">
                 <img src="/images/s22.jpeg" />
              </li>
              <li data-thumb="/images/s33.jpeg">
                 <img src="/images/s33.jpeg" />
              </li>
              <li data-thumb="/images/s44.jpeg">
                 <img src="/images/s44.jpeg" />
              </li>
           </ul>
        </div>
     </div>
     <div class="single-right">
        <h3><%= @product.name %></h3>
        <div class="id">
           <h4>Model: <%= @product.sku %></h4>
        </div>
        <form action="" class="sky-form">
           <fieldset>
              <section>
                 <div class="rating">
                    <input type="radio" name="stars-rating" id="stars-rating-5">
                    <label for="stars-rating-5"><i class="icon-star"></i></label>
                    <input type="radio" name="stars-rating" id="stars-rating-4">
                    <label for="stars-rating-4"><i class="icon-star"></i></label>
                    <input type="radio" name="stars-rating" id="stars-rating-3">
                    <label for="stars-rating-3"><i class="icon-star"></i></label>
                    <input type="radio" name="stars-rating" id="stars-rating-2">
                    <label for="stars-rating-2"><i class="icon-star"></i></label>
                    <input type="radio" name="stars-rating" id="stars-rating-1">
                    <label for="stars-rating-1"><i class="icon-star"></i></label>
                    <div class="clearfix"></div>
                 </div>
              </section>
           </fieldset>
        </form>
        <div class="cost">
           <div class="prdt-cost">
              <ul>
                 <li>MRP: <del><%= current_price @product.price %></del></li>
                 <li>Sellling Price:</li>
                 <li class="active"><%= current_price @product.cost_price %></li>

              </ul>
           </div>
           <div class="check">
              <p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>Enter pin code for delivery & availability</p>
              <form class="navbar-form navbar-left" role="search">
                 <div class="form-group">
                    <input type="text" class="form-control" placeholder="Enter Pin code">
                 </div>
                 <button type="submit" class="btn btn-default">Verify</button>
              </form>
           </div>
           <div class="clearfix"></div>
        </div>
        <% if @attributes.present? %>
          <div class="item-list">
             <ul>
                <%= render 'products/attributes', :attributes => @attributes %>
             </ul>
          </div>
        <% end %>

        <div class="space-1"></div>
        <%= form_tag(add_to_cart_path, method: :POST , remote: true) do %>
          <div class="row">
            <div class="col-md-offset-1 col-xs-offset-1">
              <div class="row add-to-cart">
                <div class="numbers-row col-md-2 col-xs-9">
                  <%= text_field_tag :quantity, 1, :class => 'form-control' %>
                </div>
              </div>
            </div>
          </div>
          <div class="space-1"></div>

          <div class="row">
            <%= hidden_field_tag :product_id, @product.id %>
            <div class="col-md-3 col-xs-6">
              <%= link_to "BUY NOW", "#", :class => "col-xs-12 btn btn-warning" %>
            </div>
            <div class="col-md-3 col-xs-6"><button type="submit" class="col-xs-12 btn btn-danger">ADD TO CART</button></div>
          </div>
        <% end %>

        <div class="single-bottom1">
           <h6>Details</h6>
           <p class="prod-desc"><%= @product.short_description %></p>
        </div>
     </div>
     <div class="clearfix"></div>
     <div class="sofaset-info">
        <h4>Product Summary: American Diamond Famina Ruby Copper, Brass Jewel Set</h4>
        <%= @product.description %>
     </div>
     <div class="product-table">
        <h3>Specifications of American Diamond Famina Ruby Copper, Brass Jewel Set</h3>
        <div class="item-sec">
